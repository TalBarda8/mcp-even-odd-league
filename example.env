# ============================================================================
# MCP Even/Odd League - Configuration Example
# ============================================================================
# This file contains all configurable parameters for the Even/Odd League system.
# Copy this file to .env and customize values for your environment.
#
# IMPORTANT: Never commit .env files containing sensitive data to version control.
# ============================================================================

# ----------------------------------------------------------------------------
# Network Configuration
# ----------------------------------------------------------------------------
# League Manager service configuration
LEAGUE_MANAGER_HOST=localhost
LEAGUE_MANAGER_PORT=8000

# Player agent service ports
# Each player runs on a separate port for MCP communication
PLAYER_P01_PORT=8101
PLAYER_P02_PORT=8102
PLAYER_P03_PORT=8103
PLAYER_P04_PORT=8104

# ----------------------------------------------------------------------------
# Timeout Configuration (in seconds)
# ----------------------------------------------------------------------------
# Timeout for waiting for GAME_JOIN_ACK response from players
TIMEOUT_GAME_JOIN_ACK=5

# Timeout for waiting for CHOOSE_PARITY_RESPONSE from players
TIMEOUT_PARITY_CHOICE=30

# Default timeout for generic responses
TIMEOUT_DEFAULT=10

# ----------------------------------------------------------------------------
# Retry Configuration
# ----------------------------------------------------------------------------
# Maximum number of retry attempts for failed requests
# Set to 1 for single retry (total 2 attempts)
MAX_RETRIES=1

# ----------------------------------------------------------------------------
# Game Parameters
# ----------------------------------------------------------------------------
# Random number generation range for even/odd game
GAME_NUMBER_MIN=1
GAME_NUMBER_MAX=10

# ----------------------------------------------------------------------------
# Protocol Configuration
# ----------------------------------------------------------------------------
# MCP protocol version identifier
PROTOCOL_VERSION=league.v2

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location (relative to project root)
LOG_FILE=SHARED/logs/system.log

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# SQLite database path for league standings and match history
DB_PATH=SHARED/data/league.db

# ----------------------------------------------------------------------------
# League Configuration
# ----------------------------------------------------------------------------
# League identifier
LEAGUE_ID=league_2025_even_odd

# Number of rounds in the league (for round-robin tournament)
# Default: n*(n-1)/2 where n is number of players (4 players = 6 matches)
# Leave empty to auto-calculate based on number of players
NUM_ROUNDS=

# Points awarded for win, draw, loss
POINTS_WIN=3
POINTS_DRAW=1
POINTS_LOSS=0
